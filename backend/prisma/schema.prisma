  legalReference    Json?    @map("legal_reference") // {law, article, source, publishedAt, notes}
  legalLaw          String?  @map("legal_law") // Ley aplicada (LISR, LIMSS, etc.)
  legalArticle      String?  @map("legal_article") // Artículo específico
  legalSource       String?  @map("legal_source") // Fuente (DOF, etc.)
  legalPublishedAt  DateTime? @map("legal_published_at") @db.Date

  // ============================================
  // HARDENING: Snapshots para auditoría inmutable
  // Garantiza reproducibilidad incluso si las reglas cambian en el futuro
  // ============================================
  inputSnapshot     Json?    @map("input_snapshot")  // Copia profunda de todas las variables de entrada
  outputSnapshot    Json?    @map("output_snapshot") // Resultado completo del cálculo en JSON
  appliedRulesSnapshot Json? @map("applied_rules_snapshot") // IDs y versiones exactas de reglas aplicadas

  // Metadata
  fiscalYear        Int      @map("fiscal_year")
  periodType        String   @map("period_type")
  calculatedAt      DateTime @default(now()) @map("calculated_at")
  calculatedBy      String?  @map("calculated_by")

  @@index([payrollDetailId])
  @@index([conceptType, conceptCode])
  @@index([fiscalYear])
  @@map("fiscal_calculation_audit")
}

// ============================================
// HARDENING: Motor de Reglas Fiscales
// Permite definir reglas fiscales personalizadas por empresa con
// validación anti-traslapes de fechas y tipado estricto de lógica
// ============================================

enum FiscalRuleType {
  ISR                 // Impuesto Sobre la Renta
  IMSS_EMPLOYEE       // Cuotas IMSS trabajador
  IMSS_EMPLOYER       // Cuotas IMSS patrón
  SUBSIDIO_EMPLEO     // Subsidio al empleo
  ISN                 // Impuesto sobre nómina estatal
  INFONAVIT           // Aportaciones INFONAVIT
  RCV                 // Retiro, Cesantía y Vejez
  AGUINALDO           // Cálculo de aguinaldo
  PRIMA_VACACIONAL    // Prima vacacional
  PTU                 // Reparto de utilidades
  OVERTIME            // Tiempo extra
  CUSTOM              // Regla personalizada
}

model FiscalRule {
  id          String   @id @default(uuid())
  companyId   String   @map("company_id")
  company     Company  @relation(fields: [companyId], references: [id])

  // Tipo y nombre de la regla
  ruleType    FiscalRuleType @map("rule_type")
  name        String   // Nombre descriptivo
  description String?  @db.Text

  // Período de vigencia (para validación anti-traslapes)
  startDate   DateTime @map("start_date") @db.Date
  endDate     DateTime? @map("end_date") @db.Date // Null = vigente indefinidamente

  // Lógica de la regla en formato JSON estricto
  // Debe cumplir con interfaz FiscalRuleLogic
  logicJson   Json     @map("logic_json")

  // Prioridad para casos de múltiples reglas aplicables
  priority    Int      @default(0)

  // Metadatos de control
  active      Boolean  @default(true)
  version     Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  createdBy   String?  @map("created_by")
  updatedBy   String?  @map("updated_by")

  // Referencia legal obligatoria
  legalLaw      String?  @map("legal_law")
  legalArticle  String?  @map("legal_article")
  legalSource   String?  @map("legal_source")

  // ============================================
  // HARDENING: Índice compuesto para búsquedas rápidas
  // y validación de anti-traslapes
  // ============================================
  @@index([companyId, ruleType, active])
  @@index([companyId, ruleType, startDate, endDate])
  @@map("fiscal_rules")
}

