# Dockerfile para desarrollo con hot-reload
FROM node:20-alpine

WORKDIR /app

# Instalar dependencias del sistema (incluye OpenSSL para Prisma)
RUN apk add --no-cache python3 make g++ openssl openssl-dev libc6-compat

# Copiar archivos de configuración
COPY package*.json ./
COPY tsconfig*.json ./
COPY nest-cli.json ./
COPY prisma ./prisma/

# Instalar dependencias
RUN npm install

# Generar cliente Prisma
RUN npx prisma generate

# Copiar código fuente (será sobreescrito por el volumen en desarrollo)
COPY src ./src/

# Exponer puerto
EXPOSE 3000

# Comando de inicio con hot-reload
CMD ["npm", "run", "dev"]
