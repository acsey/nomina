# JWT
JWT_SECRET="tu-clave-secreta-super-segura-cambiar-en-produccion"
JWT_EXPIRES_IN="24h"

# App
PORT=3000
NODE_ENV=development

# =============================================
# SEGURIDAD - CIFRADO DE SECRETOS
# =============================================
# Clave maestra para cifrado de secretos (certificados SAT, credenciales PAC)
# IMPORTANTE: Generar una clave segura en producción:
#   openssl rand -base64 32
# Esta clave cifra los datos sensibles en la base de datos
ENCRYPTION_KEY="genera-una-clave-segura-de-al-menos-32-caracteres-aqui"

# =============================================
# CFDI / Timbrado (PAC) - LEGACY
# NOTA: Las credenciales PAC ahora se almacenan cifradas por empresa en BD
# Estas variables son solo para compatibilidad hacia atrás
# =============================================
PAC_URL="https://api.pac-ejemplo.com"
PAC_USER="usuario_pac"
PAC_PASSWORD="password_pac"
RFC_EMISOR="XAXX010101000"

# Certificados SAT - LEGACY
# NOTA: Los certificados ahora se almacenan cifrados por empresa en BD
# Estas variables son solo para compatibilidad hacia atrás
CER_PATH="./certs/certificado.cer"
KEY_PATH="./certs/llave.key"
KEY_PASSWORD="password_certificado"

